<?xml version="1.0"?>
<psalm
    phpVersion="7.4"
>
<projectFiles>
    <directory name="src" />
    <ignoreFiles>
        <directory name="src/tests" />
    </ignoreFiles>
</projectFiles>

<issueHandlers>
    <MissingPropertyType errorLevel="suppress" />

    <UndefinedFunction>
        <errorLevel type="suppress">
            <directory name="src" />
        </errorLevel>
    </UndefinedFunction>

    <UnresolvableInclude>
        <errorLevel type="suppress">
            <directory name="src" />
        </errorLevel>
    </UnresolvableInclude>
</issueHandlers>

</psalm>
